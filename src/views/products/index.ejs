<!DOCTYPE html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <style>
      body {
        font-family: "Arial", sans-serif;
        background-color: #f8f9fa;
        margin: 0;
        padding: 0;
        color: #333;
      }

      header {
        background-color: #2d3e50;
        color: white;
        text-align: center;
        padding: 1.5rem;
        font-size: 1.5rem;
      }

      .product-list {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 20px;
        padding: 30px;
        max-width: 1200px;
        margin: 0 auto;
      }

      .product-item {
        background-color: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        text-align: center;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
      }

      .product-item:hover {
        transform: translateY(-10px);
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
      }

      .product-item img {
        max-width: 200px;
        height: 200px;
        border-radius: 10%;
        object-fit: cover;
        margin-bottom: 15px;
      }

      .product-item h3 {
        font-size: 1.1rem;
        color: #333;
        margin: 10px 0;
        font-weight: bold;
      }

      .product-item p {
        color: #777;
        font-size: 0.9rem;
        margin-bottom: 10px;
      }

      .price {
        color: #c0392b;
        font-weight: bold;
        font-size: 1.1rem;
        letter-spacing: 0.5px;
        margin-top: 8px;
        background-color: #fcebea;
        padding: 6px 10px;
        border-radius: 6px;
        display: inline-block;
      }

      footer {
        background-color: #2d3e50;
        color: #fff;
        text-align: center;
        padding: 1.2rem;
        font-size: 1.2rem;
        margin-top: 40px;
        box-shadow: 0 -2px 5px rgba(0, 0, 0, 0.05);
      }

      @media (max-width: 768px) {
        header {
          font-size: 1.2rem;
        }

        .user-list {
          grid-template-columns: 1fr 1fr;
        }

        .user-item {
          padding: 15px;
        }
      }

      @media (max-width: 480px) {
        .user-list {
          grid-template-columns: 1fr;
        }

        .user-item {
          padding: 12px;
        }
      }
    </style>
  </head>
  <body>
    <header>
      <h1><%= title %></h1>
    </header>

    <% function formatRupiah(number) { return new Intl.NumberFormat('id-ID', {
    style: 'currency', currency: 'IDR', minimumFractionDigits: 0
    }).format(number); } %>

    <div class="product-list">
      <% products.forEach(product => { %>
      <div class="product-item">
        <img src="<%= product.image %>" alt="<%= product.name %>" />
        <h3><%= product.name %></h3>
        <p class="price"><%= formatRupiah(product.price) %></p>
        <p><strong>Kategori:</strong> <%= product.category %></p>
      </div>
      <% }) %>
    </div>

    <footer>
      <p>
        &copy; <%= new Date().getFullYear() %> Toko Baju Online. Semua hak
        dilindungi.
      </p>
    </footer>
  </body>
</html>
