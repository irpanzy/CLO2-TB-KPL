<!DOCTYPE html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;700&display=swap"
      rel="stylesheet"
    />
    <style>
      body {
        font-family: "Montserrat", sans-serif;
        background-color: #f8f9fa;
        margin: 0;
        padding: 0;
        color: #333;
      }

      header {
        background-color: #2d3e50;
        color: white;
        text-align: center;
        padding: 1.5rem;
        font-size: 1.2rem;
      }

      .user-list {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 20px;
        padding: 30px;
        max-width: 1200px;
        margin: 0 auto;
      }

      .user-item {
        background-color: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        text-align: center;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
      }

      .user-item:hover {
        transform: translateY(-10px);
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
      }

      .user-item img {
        max-width: 80px;
        height: 80px;
        border-radius: 50%;
        object-fit: cover;
        margin-bottom: 15px;
      }

      .user-item h3 {
        font-size: 1.1rem;
        color: #333;
        margin: 10px 0;
        font-weight: bold;
      }

      .user-item p {
        color: #777;
        font-size: 0.9rem;
        margin-bottom: 10px;
      }

      .price {
        color: #e74c3c;
        font-weight: bold;
      }

      .pagination {
        max-width: 1200px;
        margin: 30px auto 0;
        display: flex;
        justify-content: center;
        gap: 10px;
        flex-wrap: wrap;
      }

      .pagination a {
        padding: 8px 14px;
        text-decoration: none;
        color: #2d3e50;
        border: 1px solid #ccc;
        border-radius: 4px;
        background-color: white;
      }

      .pagination a.active {
        background-color: #2d3e50;
        color: white;
        font-weight: bold;
      }

      .pagination a:hover {
        background-color: #34495e;
        color: white;
      }

      footer {
        background-color: #2d3e50;
        color: #fff;
        text-align: center;
        padding: 1.2rem;
        font-size: 1.2rem;
        margin-top: 40px;
        box-shadow: 0 -2px 5px rgba(0, 0, 0, 0.05);
      }

      /* Mobile Responsiveness */
      @media (max-width: 768px) {
        header {
          font-size: 1.2rem;
        }

        .user-list {
          grid-template-columns: 1fr 1fr;
        }

        .user-item {
          padding: 15px;
        }
      }

      @media (max-width: 480px) {
        .user-list {
          grid-template-columns: 1fr;
        }

        .user-item {
          padding: 12px;
        }
      }
    </style>
  </head>
  <body>
    <header>
      <h1><%= title %></h1>
    </header>
    <div class="user-list">
      <% if (users.length > 0) { %>
        <% users.forEach(user => { %>
          <div class="user-item">
            <img
              src="https://cdn.pixabay.com/photo/2018/11/13/21/43/avatar-3814049_640.png"
              alt="<%= user.name %>"
            />
            <h3><%= user.name %></h3>
            <p><%= user.email %></p>
          </div>
        <% }) %>
        
      <% } else { %>
        <p style="text-align: center">User tidak ditemukan.</p>
      <% } %>
      
    <% if (totalPages > 1) { %>

    <div class="pagination">
      <% for (let i = 1; i <= totalPages; i++) { %>
      <a
        href="/view/users?page=<%= i %>"
        class="<%= i === currentPage ? 'active' : '' %>"
        ><%= i %></a
      >
      <% } %>
    </div>
    <% } %>

    <footer>
      <p>
        &copy; <%= new Date().getFullYear() %> Toko Baju Online. Semua hak
        dilindungi.
      </p>
    </footer>
  </body>
</html>
